@page
@model dynamic

<div class="login-container" style="background: linear-gradient(135deg, #F5F5F6 0%, #E0E0E0 100%); border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); max-width: 500px; margin: 5% auto; padding: 2rem; position: relative; overflow: hidden;">
    <div style="position: absolute; top: 0; right: 0; width: 100px; height: 100px; background: #2E7D32; border-radius: 0 0 0 100px;"></div>
    <div style="position: absolute; bottom: 0; left: 0; width: 150px; height: 150px; background: #5D4037; opacity: 0.1; border-radius: 0 100px 0 0;"></div>

    <div style="text-align: center; margin-bottom: 2rem;">
        <h1 style="color: #2E7D32; font-weight: 700; font-size: 2rem;">Agri-Energy Connect</h1>
        <p style="color: #5D4037; font-size: 1rem;">The future of farming connections</p>
    </div>

    <form asp-action="Login" method="post" style="position: relative; z-index: 2;">
        <div style="margin-bottom: 1.5rem;">
            <label style="display: block; margin-bottom: 0.5rem; color: #5D4037; font-weight: 500;">Username</label>
            <input type="text" name="username" style="width: 100%; padding: 0.75rem; border: 1px solid #BDBDBD; border-radius: 8px; background-color: rgba(255,255,255,0.8); transition: all 0.3s;"
                   onfocus="this.style.borderColor='#0288D1'; this.style.boxShadow='0 0 0 2px rgba(2,136,209,0.2)'"
                   onblur="this.style.borderColor='#BDBDBD'; this.style.boxShadow='none'">
        </div>
        <div style="margin-bottom: 2rem;">
            <label style="display: block; margin-bottom: 0.5rem; color: #5D4037; font-weight: 500;">Password</label>
            <input type="password" name="password" style="width: 100%; padding: 0.75rem; border: 1px solid #BDBDBD; border-radius: 8px; background-color: rgba(255,255,255,0.8); transition: all 0.3s;"
                   onfocus="this.style.borderColor='#0288D1'; this.style.boxShadow='0 0 0 2px rgba(2,136,209,0.2)'"
                   onblur="this.style.borderColor='#BDBDBD'; this.style.boxShadow='none'">
        </div>
        <button type="submit" style="width: 100%; padding: 0.75rem; background: linear-gradient(90deg, #2E7D32 0%, #388E3C 100%); color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; transition: all 0.3s; box-shadow: 0 4px 6px rgba(0,0,0,0.1);"
                onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 8px rgba(0,0,0,0.15)'"
                onmouseout="this.style.transform='none'; this.style.boxShadow='0 4px 6px rgba(0,0,0,0.1)'">
            Login
        </button>
    </form>

    <div style="text-align: center; margin-top: 1.5rem; color: #757575; font-size: 0.9rem;">
        <p>New to Agri-Energy? <a href="#" style="color: #0288D1; text-decoration: none; font-weight: 500;">Register here</a></p>
    </div>
</div>