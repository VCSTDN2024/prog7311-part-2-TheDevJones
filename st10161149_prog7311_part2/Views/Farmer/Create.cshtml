@model st10161149_prog7311_part2.Models.FarmerUserViewModel
@{
    ViewData["Title"] = "Add Farmer";
}

<style>
    :root {
        --primary-color: #2E7D32;
        --secondary-color: #388E3C;
        --text-dark: #5D4037;
        --text-medium: #757575;
        --background-light: #F5F5F6;
        --border-color: #BDBDBD;
        --button-hover: #0288D1;
        --button-active: #388E3C;
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: var(--background-light);
    }

    .form-container {
        max-width: 600px;
        margin: 5% auto;
        padding: 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .form-header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
    }

        .form-header .form-icon {
            background: var(--primary-color);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .form-header h2 {
            color: var(--primary-color);
            font-weight: 700;
        }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            display: block;
            color: var(--text-dark);
            font-weight: 500;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.8);
            transition: all 0.3s;
        }

            .form-group input:focus {
                border-color: var(--button-hover);
                box-shadow: 0 0 0 2px rgba(2, 136, 209, 0.2);
            }

    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
    }

        .form-actions a, .form-actions button {
            padding: 0.75rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

    .btn-outline {
        background: none;
        border: 1px solid var(--primary-color);
        color: var(--primary-color);
    }

    .btn-primary {
        background: linear-gradient(90deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        border: none;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

    .btn-outline:hover {
        background-color: var(--primary-color);
        color: white;
    }
</style>

<div class="form-container">
    <div class="form-header">
        <div class="form-icon">
            <i class="icon-farmer"></i>
        </div>
        <h2>Register New Farmer</h2>
    </div>

    <form asp-action="Create" method="post" class="form-card">
        <div class="form-group">
            <label asp-for="Farmer.FullName">Full Name</label>
            <input asp-for="Farmer.FullName" class="form-control" />
            <span asp-validation-for="Farmer.FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Farmer.Location">Location</label>
            <input asp-for="Farmer.Location" class="form-control" />
            <span asp-validation-for="Farmer.Location" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-actions">
            <a asp-action="Index" class="btn btn-outline">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Farmer</button>
        </div>
    </form>
</div>
