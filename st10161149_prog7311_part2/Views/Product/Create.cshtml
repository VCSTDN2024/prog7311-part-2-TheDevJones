@model st10161149_prog7311_part2.Models.Product

<style>
    :root {
        --primary-color: #2E7D32;
        --secondary-color: #388E3C;
        --text-dark: #5D4037;
        --text-medium: #757575;
        --background-light: #F5F5F6;
        --border-color: #BDBDBD;
        --button-hover: #0288D1;
        --button-active: #388E3C;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: var(--background-light);
        margin: 0;
        padding: 0;
    }

    h2 {
        color: var(--primary-color);
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
    }

    form {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 2rem auto;
    }

    label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
    }

    input, textarea {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        border: 1px solid var(--border-color);
    }

    textarea {
        height: 150px;
        resize: none;
    }

    button[type="submit"] {
        background-color: var(--secondary-color);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
    }

        button[type="submit"]:hover {
            background-color: var(--button-hover);
            transform: translateY(-2px);
        }
</style>


<h2>Add New Product</h2>
<form asp-action="Create" method="post">
    <div>
        <label>Name:</label>
        <input asp-for="ProductName" />
    </div>
    <div>
        <label>Category:</label>
        <textarea asp-for="Category"></textarea>
    </div>
    <div>
        <label>Price:</label>
        <input asp-for="Price" />
    </div>
    <button type="submit" class="btn">Save</button>
</form>

